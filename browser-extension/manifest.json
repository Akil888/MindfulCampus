{
  "manifest_version": 3,
  "name": "MindfulCampus - Mental Wellness Companion",
  "version": "1.0.0",
  "description": "AI-powered mental wellness monitoring and intervention for students",
  
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "notifications",
    "scripting"
  ],
  
  "host_permissions": [
    "https://facebook.com/*",
    "https://www.facebook.com/*",
    "https://instagram.com/*",
    "https://www.instagram.com/*",
    "https://twitter.com/*",
    "https://www.twitter.com/*",
    "https://x.com/*",
    "https://www.x.com/*",
    "https://discord.com/*",
    "https://www.discord.com/*",
    "https://reddit.com/*",
    "https://www.reddit.com/*",
    "https://youtube.com/*",
    "https://www.youtube.com/*",
    "https://tiktok.com/*",
    "https://www.tiktok.com/*",
    "http://localhost:8000/*",
    "http://localhost:3000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://facebook.com/*",
        "https://www.facebook.com/*",
        "https://instagram.com/*",
        "https://www.instagram.com/*",
        "https://twitter.com/*",
        "https://www.twitter.com/*",
        "https://x.com/*",
        "https://www.x.com/*",
        "https://discord.com/*",
        "https://www.discord.com/*",
        "https://reddit.com/*",
        "https://www.reddit.com/*",
        "https://youtube.com/*",
        "https://www.youtube.com/*",
        "https://tiktok.com/*",
        "https://www.tiktok.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "MindfulCampus"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "popup/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}